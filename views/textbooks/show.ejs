<% include ../partials/header %>


<div class="container" >
            <div class="row">
<h1 style="text-align: center; font-family: 'Lato', sans-serif;">UVIC TEXTBOOKS</h1>


 <div class="col-md-4">
        </div>
          <div class="col-md-8">
              
              <div style="text-align: center;" class="form-group col-md-6 col-lg-6 col-sm-12">
        <a href="/UVIC/post" class="btn btn-lg btn-success">Create New Post</a>
        </div>
        
           <div class="col-lg-7">
                    </div>
         
            	<form action="/UVIC" method="GET" class="form-inline">
            		 <div style="text-align: center;" class="form-group col-md-6 col-lg-6 col-sm-6 ">
            		     <div  style="margin-left:12px;" class="col-xs-10">
            			<input  type="text"  name="search" placeholder="Search" class="form-control">
        
            		<button  style=" position:absolute; right:0; top:0;" class="btn btn-primary btn-med btn-default"><i class="fas fa-search"></i></button>
            			</div>
            	</div>
            	</form>
           

 
 </div>

    </div>
</div>


        <div class="container" style="text-align: center">
            <div class="row">
            
             
             <div style="margin-bottom: 20px; margin-top:20px; border-bottom: 1.5px solid #4C4F51; "></div>
             
             <div class="col-md-1">
        </div>
          <div class="col-md-10">
            
            <% var i %>
            
            
            <% for(i=Textbook.length-1; i>=0; i--){ %>
                 
                     
            <div class="col-md-4 col-sm-12 col-xs-12 col-lg-4">    
                
                 <div style="margin-left:3px;">
                    <em class="pull-left" style="color: #DAD7D7; font-size:13px; "><%= moment(Textbook[i].createdAt).subtract(1, "days").format("MMM D") %></em>
                    </div>
                
                <div class="thumbnail" style="padding: 10px 30px 10px;">    
                
                  <% if(Textbook[i].price){ %>
                    <h4 class="pull-left" style="padding-top:5px;"><i class="fas fa-dollar-sign" style="margin-right: 2px; ">
                    </i><%= Textbook[i].price %></h4>
                    <% }else{ %>
                    
                     <h4 class="pull-left" style="padding-top:5px;"><i style="color: white" class="fas fa-dollar-sign" >
                    </i></h4>
                    
                    <% } %>
                

                    <% if(Textbook[i].images[0]){ %>
                    <img class="img-fluid firstPic" style = "width: 250px; height: 200px; border-radius:8px;" src="<%= Textbook[i].images[0].url %>">
                   
                    
                    
                  <% } %>
                  
                  <% if(Textbook[i].images[0] == null){ %>
                      
                      <img class="img-fluid firstPic" style = "width: 250px; height: 200px; border-radius:8px;" 
                      src="https://res.cloudinary.com/manvirm/image/upload/v1551663701/sell-text/logo1%20-%20Copyba8df508deb7af6ecfe0bbfc937ff487.png">
                       
                   
                 <% } %>
                 
                <div class="caption">
                    <h4><strong><%= Textbook[i].course %></strong></h4>
                    
                    <% if(Textbook[i].title){ %>
                    <h4>
                    <% if(Textbook[i].title.length > 21){ %>
                        
                        <%=Textbook[i].title.substring(0, 18) %><strong>...</strong>
                    <% } %>
                    </h4>
                    
                    <% if(Textbook[i].title.length<=21){ %>
                    
                        <h4><%= Textbook[i].title %></h4>
                    
                    <% } %>
                <% } %>
                  
                    
                    <a href="/UVIC/<%= Textbook[i]._id %>" class="btn btn-primary">More Info</a>
                   
                    </div>
                </div>    
             
                
                </div>
       
            <% } %>    
            
                </div>
                    </div>
               
 

</div>
</div>
<!-- Bottom Footer -->
