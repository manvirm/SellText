<% include ./partials/header %>

<div class="container">
<div class="row">



     <div class="col-lg-4 col-md-4 col-sm-4">
        </div>
          <div class="col-lg-8 col-md-8 col-sm-8 ">

 <h2 style="margin-bottom: 25px; margin-left:31px; font-family: 'Lato', sans-serif; font-size: 25px;" >Create a New Account</h2>
 
     <form action="/register" method="POST">
    
      <div  class="form-group row col-md-8 col-lg-8 col-sm-8 ">
       
       
         <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
                <input class="form-control" type="text" name="firstName" placeholder="First Name" maxlength="30" required>
                
                </div>
                
                 <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
                
                <input class="form-control" type="text" name="lastName" placeholder="Last Name" maxlength="30" required>
                
         </div>
        </div>
        
       
    <div class="col-lg-8 col-md-8 col-sm-6">
                    </div>
                    
      <div  class="form-group col-md-5 col-lg-5 col-sm-7 ">
                <input id="emailFirst" class="form-control" type="email" name="email" placeholder="Email" required>
        </div>
        
        <div class="col-lg-8 col-md-8 col-sm-6">
                    </div>
        
        <div  class="form-group col-md-5 col-lg-5 col-sm-7 ">
        <input id="emailConfirm" class="form-control" type="email" placeholder="Confirm Email" required>
        </div>
        
        
         <div class="col-lg-8 col-md-8 col-sm-6" style="margin-bottom: 20px;">
                    </div>
           
                    
                    
    
       <div  class="form-group col-md-5 col-lg-5 col-sm-7 ">
                <input class="form-control" type="username" name="username" placeholder="username (15 characters max)" maxlength="15" required>
        </div>
           
             <div class="col-lg-8 col-md-8 col-sm-6">
                    </div>
            
           
        <div  class="form-group col-md-5 col-lg-5 col-sm-7 ">  
                <input class="form-control" type="password" name="password" placeholder="New password"  minlength="6" id="password" required>
        </div>
        
       <div class="col-lg-8 col-md-8 col-sm-6">
                    </div>
            
        
        <div  class="form-group col-md-5 col-lg-5 col-sm-7 ">  
                <input type="password" class="form-control" placeholder="Confirm password"  minlength="6" id="confirm_password" required>
        </div>
        
       <div class="col-lg-8 col-md-8 col-sm-6">
                    </div>
            
        
       
        
     <div class="col-lg-8 col-md-8 col-sm-6">
                    </div>
            
        
       <div  class="form-group col-md-5 col-lg-5 col-sm-7 ">    
              <button class="btn btn-primary btn-block btn-lg btn-default">Sign Up</button>
              <p style=" margin-top:15px;">Already have an account?</p><a href="/login"><p>Click here to log in</p></a>
        </div>
    </form>
    
    
    </div>
    
    
  </div>
</div>

<script src="/javascripts/user/matchPasswords.js"></script>
<script src="/javascripts/user/matchEmails.js"></script>

<% include ./partials/footer %>